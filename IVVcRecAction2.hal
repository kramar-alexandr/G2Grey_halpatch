        UpdateCUServiceIV(IVr,"IVVc",IVr.SerNr,IVr.PayDate);
        AddToCustomerAccount(IVr);
        IVUpdateCredMan(IVr,CredManEventr,true,false);
        IVCreateBuyBack(IVr);
      end;
      BlockLoad(EIb);
      testf = true;
      if (IVr.InvType==2) then begin
