  if (IVr.Invalid==0) then begin
    if (IVr.OKFlag!=0) then begin
      IVUpdateItemHist(IVr);
      IVUpdateSerialNr(IVr,false,true);
      CheckCUBalDate(IVr.CustCode,IVr.TransDate);
