    res = -1; 
    goto L99;
  end;
L12:;
  if (Date2Test("IVVc",IVp.TransDate,"TransDate",-1)==false) then begin
    res = -1;
    goto L99;
  end;
  if (Date2Test("IVVc",IVp.InvDate,"InvDate",-1)==false) then begin
    res = -1;
    goto L99;
  end;
  if (DisallowFutureDateCheck(true,IVp.TransDate,"TransDate",-1)) then begin
