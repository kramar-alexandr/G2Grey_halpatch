    goto L99;
  end;
  if (DisallowFutureDateCheck(true,IVp.InvDate,"InvDate",-1)) then begin
    res = -1;
    goto L99;
  end;
  if (CUr.CUType==0) then begin
    RecordCheckError(1120,IVp.CustCode,-1,"CustCode");      
