    end;  
    if (IVp.InvType==2) then begin
      if (MainCLRec.PMControl!=0) then begin
        if (CheckPDExists(IVp.PayDeal)) then begin
          RecordCheckError(1277,"",-1,"PayDeal");      
          res = -1;
          goto L99;        
